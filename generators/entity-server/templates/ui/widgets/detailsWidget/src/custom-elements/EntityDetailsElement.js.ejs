import React from 'react';
import ReactDOM from 'react-dom';
import i18next from 'i18next';
import <%= entityClass %>Details from 'components/<%= entityClass %>DetailsContainer';

class <%= entityClass %>DetailsElement extends HTMLElement {
  connectedCallback() {
    const mountPoint = document.createElement('div');
    this.appendChild(mountPoint);

    const locale = this.getAttribute('locale') || 'en';
    i18next.changeLanguage(locale);

    const customEventPrefix = '<%= entityInstance %>.details.';

    const onError = error => {
      const customEvent = new CustomEvent(`${customEventPrefix}error`, {
        details: {
          error,
        },
      });
      this.dispatchEvent(customEvent);
    };

    const id = this.getAttribute('id');

    const reactComponent = React.createElement(<%= entityClass %>Details, {
      id,
      onError,
    });
    ReactDOM.render(reactComponent, mountPoint);
  }
}

customElements.define('<%= entityFileName %>-details', <%= entityClass %>DetailsElement);
