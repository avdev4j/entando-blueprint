<%# { "useBluePrint": true, "renameTo": "`/${generator.entityInstance}/detailsWidget/src/components/${generator.entityClass}DetailsContainer.js`" } -%>
import React from 'react';
import PropTypes from 'prop-types';
import i18next from 'i18next';
import { ThemeProvider } from '@material-ui/styles';
import { createMuiTheme } from '@material-ui/core';

import <%= entityClass %>Details from 'components/<%= entityClass %>Details';
import Notification from 'components/common/Notification';
import get<%= entityClass %> from 'api/<%= entityInstance %>';

<%_ const ComponentName = `${entityClass}DetailsContainer`; _%>
class <%= ComponentName %> extends React.Component {
  constructor(props) {
    super(props);

    this.state = {
      loading: true,
      <%= entityInstance %>: {},
      notificationStatus: null,
      notificationMessage: null,
    };

    this.theme = createMuiTheme();
    this.closeNotification = this.closeNotification.bind(this);
  }

  componentDidMount() {
    const { id, onError } = this.props;

    if (id) {
      get<%= entityClass %>({ id })
        .then(response => this.setState({
          notificationStatus: null,
          notificationMessage: null,
          <%= entityInstance %>: response
        }))
        .catch(e => {
          onError(e);
          this.setState({
            notificationStatus: 'error',
            notificationMessage: i18next.t('common.couldNotFetchData'),
          });
        })
        .finally(() => this.setState({ loading: false }));
    } else {
      this.setState({
        loading: false,
        notificationStatus: 'error',
        notificationMessage: i18next.t('common.missingId'),
      });
    }
  }

  closeNotification() {
    this.setState({ error: null });
  }

  render() {
    const { <%= entityInstance %>, notificationStatus, notificationMessage, loading } = this.state;

    return (
      <ThemeProvider theme={this.theme}>
        {loading && i18next.t('common.loading')}
        {!loading && <<%= entityClass %>Details <%= entityInstance %>={<%= entityInstance %>} />}
        <Notification
          status={notificationStatus}
          message={notificationMessage}
          onClose={this.closeNotification}
        />
      </ThemeProvider>
    );
  }
}

<%= ComponentName %>.propTypes = {
  id: PropTypes.string.isRequired,
  onError: PropTypes.func,
};

<%= ComponentName %>.defaultProps = {
  onError: () => {},
};

export default <%= ComponentName %>;
